{% extends 'base.html.twig' %}

{% block title %}Détails du Quiz{% endblock %}

{% block body %}
<div class="max-w-[500px] mx-auto bg-white p-8 rounded-lg shadow-lg">
    <h1 class="text-3xl font-semibold text-center text-gray-800 mb-6">Détails du Quiz</h1>

    <div class="bg-gray-50 p-6 rounded-lg shadow-md">
        <div class="mb-4">
            <h2 class="text-lg font-bold text-gray-700">ID:</h2>
            <p class="text-gray-600">{{ quiz.id }}</p>
        </div>

        <div class="mb-4">
            <h2 class="text-lg font-bold text-gray-700">Titre:</h2>
            <p class="text-gray-600">{{ quiz.title }}</p>
        </div>
    </div>

    <div class="flex justify-between mt-6">
        <a href="{{ path('app_quiz_index') }}" class="px-4 py-2 bg-gray-300 text-gray-800 rounded-lg hover:bg-gray-400 transition">
            ⬅ Retour à la liste
        </a>
        
        <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition">
            ✏ Modifier
        </a>
    </div>
</div>
{% endblock %}
