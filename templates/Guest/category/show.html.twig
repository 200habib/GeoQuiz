{% extends 'base.html.twig' %}

{% block title %}Détails de la Catégorie{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
    <!-- Titre -->
    <h1 class="text-3xl font-bold text-blue-600 text-center">📂 Détails de la Catégorie</h1>

    <!-- Détails de la catégorie -->
    <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-4">

        <div class="font-semibold text-gray-700">Nom:</div>
        <div class="text-gray-800">{{ category.name }}</div>

        <div class="font-semibold text-gray-700">Description:</div>
        <div class="text-gray-800">{{ category.description }}</div>
    </div>

    <!-- Boutons d'action -->
    <div class="mt-8 flex justify-center space-x-4">
        <a href="{{ path('app_category_index') }}" class="px-6 py-3 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition">
            ← Retour à la liste
        </a>
        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="px-6 py-3 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 transition">
            ✏️ Modifier
        </a>
 {{ include('category/_delete_form.html.twig', {
        }) }}
       
    </div>
</div>
{% endblock %}
