{% extends 'base.html.twig' %}

{% block title %}{{ quiz.title }} - Quiz{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto mt-10 p-6 bg-white shadow-xl rounded-lg">
    <h1 class="text-center text-3xl font-bold text-blue-600">{{ quiz.title }}</h1>

    {% if quiz.questions|length > 0 %}
        <div class="mt-4 space-y-6 grid grid-cols-2 gap-4">
            {% for question in quiz.questions %}
                <div class="p-5 ">
                    <div class="w-xs p-4 bg-white rounded-lg border border-gray-300 hover:bg-gray-50 transition text-center">
                        {{ question.questionText }}
                    </div>
                    
                    <div class="gap-4 mt-4 w-xs">
                        {% for answer in question.answers %}
                            <div class="p-4 bg-white rounded-lg border border-gray-300 hover:bg-gray-50 transition text-center">
                                {{ answer.answerText }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="mt-4 p-4 bg-yellow-100 text-yellow-800 rounded-lg text-center">
            Non ci sono domande disponibili per questo quiz.
        </div>
    {% endif %}

 
</div>
{% endblock %}
