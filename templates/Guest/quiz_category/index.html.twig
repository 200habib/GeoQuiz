{% extends 'base.html.twig' %}

{% block title %}Quiz per la categoria: {{ category.name }}{% endblock %}

{% block body %}
<div class="container mx-auto p-6">
    <div class="bg-white p-6 rounded-lg shadow-lg">
        <h1 class="text-3xl font-bold mb-4">📚 {{ category.name }}</h1>
        <p class="text-gray-700 mb-6">{{ category.description }}</p>

        {% if quizzes|length > 0 %}
            <ul class="space-y-4">
                {% for quiz in quizzes %}
                    <li class="bg-gray-100 p-4 rounded-lg hover:bg-gray-200 transition duration-300">
                        <a href="{{ path('app_quiz_show', {'id': quiz.id}) }}" class="text-xl font-semibold text-blue-600 hover:underline">
                            📝 {{ quiz.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p class="text-gray-500">Nessun quiz disponibile per questa categoria.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
